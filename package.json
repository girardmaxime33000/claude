{
  "name": "ai-marketing-agents",
  "version": "1.0.0",
  "description": "AI Marketing Agents orchestrated via Trello and Claude Code",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "agent:run": "tsx src/cli.ts run",
    "agent:poll": "tsx src/cli.ts poll",
    "agent:status": "tsx src/cli.ts status",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "anthropic": "^0.30.0",
    "@anthropic-ai/sdk": "^0.30.0",
    "octokit": "^4.0.0",
    "@octokit/rest": "^21.0.0"
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "tsx": "^4.19.0",
    "vitest": "^2.0.0",
    "eslint": "^9.0.0",
    "@types/node": "^22.0.0"
  }
}
